<% include assets/header %>


	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
				<li class="active">General</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">General Settings</h1>
			</div>
		</div><!--/.row-->
				
		
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">Settings</div>
					<div class="panel-body">
						<div class="col-md-10">
							<form role="form" action="general" method="post" enctype="multipart/form-data">
							
								<!-- Site Info -->
								<div class="hr">Site Info</div>
								<div class="form-group">
									<label style="margin-bottom:0">Site name</label>
									<input class="form-control" name="siteName" type="text" autofocus required>
								</div>
								<div class="form-group">
									<label>Site Description</label>
									<textarea class="form-control" name="siteDescription" rows="6" required></textarea>
								</div>
								<div class="form-group">
									<label style="margin-bottom:0">Site Logo</label>
									<p>Recommended size is: 250x100</p>
									<input name="siteLogo" type="file" required id="imgInp">
									<div class="image-wrapper">
										<img id="imagePreview" src="#" alt="">
										<span>X</span>
									</div>
								</div>


								<!-- Intro -->
								<div class="hr">Intro</div>
								<div class="form-group">
									<label style="margin-bottom:0">Intro Image</label>
									<p>Recommended size is: 1920x1080</p>
									<input name="introImage" type="file" required id="imgInp">
									<div class="image-wrapper">
										<img id="imagePreview" src="#" alt="">
										<span>X</span>
									</div>
								</div>
								<div class="form-group">
									<label>Intro Text</label>
									<textarea class="form-control" name="siteDescription" rows="6" required></textarea>
								</div>


								<!-- Social -->
								<div class="hr">Social Links</div>
								<div class="form-group">
									<label>Facebook</label>
									<input class="form-control" name="socialFacebook" type="text" required>
								</div>
								<div class="form-group">
									<label>Twitter</label>
									<input class="form-control" name="socialTwitter" type="text" required>
								</div>
								<div class="form-group">
									<label>Github</label>
									<input class="form-control" name="socialGithub" type="text" required>
								</div>
								
							</div>
							<div class="col-md-2">
								<button type="submit" class="btn btn-block btn-primary">Submit Button</button>
								<button type="reset" class="btn btn-block btn-default">Reset Button</button>
							</div>
						</form>
					</div>
				</div>
			</div><!-- /.col-->
		</div><!-- /.row -->
		
	</div><!--/.main-->



<% include assets/footer %>
