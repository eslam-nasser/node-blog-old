<% include assets/header %>


	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
				<li class="active">Forms</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Forms</h1>
			</div>
		</div><!--/.row-->
				
		
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">Form Elements</div>
					<div class="panel-body">
						<div class="col-md-9">
							<form action="edit-post?postId=<%= postId %>&_method=PUT" method="post" enctype="multipart/form-data">
							
								<div class="form-group">
									<label>Post title</label>
									<input class="form-control" name="postTitle"  autofocus value="<%= editThisPost.title %>">
								</div>
								
								<div class="form-group">
									<label>Post Writer</label>
									<p>The post writer will automatically set to: <span class="upper-case"><b><i><%= session.name %><i></b></span></p>
								</div>
								
								<div class="form-group">
									<label>Post content</label>
									<textarea class="tinymce" name="postContent" rows="15" style="width: 100%"><%= editThisPost.content %></textarea>
								</div>

								<div class="form-group">
									<label>Post main image</label>
									<input type="file" name="postImage" id="imgInp">
									<p class="help-block">Please upload a high quality image.</p>
									
									<div class="image-wrapper">
										<% if(editThisPost.imageUrl.filename) { %>
											<img id="imagePreview" src="<%= siteUrl +'/'+ editThisPost.imageUrl.filename %>" alt="">
										<% }else{ %>
											<p>No Image Uploades</p>
										<% }%>
									</div>
								</div>
								
							</div>
							<div class="col-md-3">
								<button type="submit" class="btn btn-primary">Submit Button</button>
								<button type="reset" class="btn btn-default">Reset Button</button>
							</div>
						</form>
					</div>
				</div>
			</div><!-- /.col-->
		</div><!-- /.row -->
		
	</div><!--/.main-->



<% include assets/footer %>
<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<link rel="stylesheet" href="css/editror/skin.min.css">
<script>tinymce.init({ 
	selector:'textarea.tinymce'
});</script>